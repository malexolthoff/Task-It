<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3 ">
      <div class="form-body">
        <h2 class="form-title">Add Internship</h2>
          <%= simple_form_for [@company, @internship] do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :name %>
              <%= f.input :description %>
              <%= f.input :length, label: "Length (in weeks)" %>
              <%= f.input :hours, label: "Hours (per week)"%>
            </div>
            <div class="form-actions">
              <%= f.button :submit, class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
