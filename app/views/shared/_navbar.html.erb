<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag('TaskIt_logo.png') %>
  </a>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <%= link_to "Favourites", '#', class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Applications", 'internship_applications_path', class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Messages", '#', class: "navbar-wagon-item navbar-wagon-link" %>


    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
      <% avatar_url = current_user.facebook_picture_url || 'Lucia.JPG' %>
      <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
      <%= current_user.email %>
      <% #avatar_url = "http://dk6kcyuwrpkrj.cloudfront.net/wp-content/uploads/sites/45/2014/05/avatar-blank.jpg" %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Profile", user_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Favourites", '#'%></li>
        <li><%= link_to "Applications", 'internship_applications_path' %></li>
        <li><%= link_to "Messages", '#'%></li>
      </ul>
    </div>
  </div>
</div>
